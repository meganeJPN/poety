<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @poeet, url:confirm_new_or_edit, method: confirm_form_method, remote: true) do |form| %>
      <div class="modal-header">
      <% if @poeet.id? %>
        <h5 class="modal-title" id="exampleModalLabel">ポイート編集の確認</h5>
      <% else %>
        <h5 class="modal-title" id="exampleModalLabel">新規ポイートの確認</h5>
      <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form.hidden_field :content %>
        <p><%= @poeet.content %></p>
      </div>
      <div class="modal-footer actions">
        <%= form.submit('戻る',class: 'btn btn-secondary',name: 'back')%>
        <%= form.submit('ポイート',class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>